<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background">

        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#141F29"
                android:endColor="#141F29"
                android:startColor="#141F29"
                />

            <size
                android:width="15dp"
                android:height="15dp"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>

            <layer-list>
                <item android:bottom="2dp"
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp">
                    <shape>
                        <gradient android:angle="-90"
                            android:centerColor="#5EA4A9"
                            android:endColor="#5EA4A9"
                            android:startColor="#5EA4A9" />

                        <corners android:radius="4dp"/>

                    </shape>
                </item>
            </layer-list>
        </clip>

    </item>

</layer-list>